{
  "name": "@ordit/sdk",
  "version": "0.0.0",
  "description": "SDK for simplified interaction with wallet APIs and inscription service",
  "repository": "https://github.com/sadoprotocol/ordit-sdk",
  "bugs": "https://github.com/sadoprotocol/ordit-sdk/issues",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "ordit",
    "ordit-sdk",
    "sdk"
  ],
  "scripts": {
    "build": "tsc -b ./tsconfig.build.json",
    "flush": "npm run clean && rm -rf ./node_modules",
    "clean": "rm -rf ./.turbo ./dist",
    "lint": "eslint ."
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "1.0.2",
    "bip32": "4.0.0",
    "bip39": "3.1.0",
    "bitcoinjs-message": "2.2.0",
    "bitcoinjs-lib": "6.1.3",
    "cross-fetch": "3.1.6",
    "ecpair": "2.1.0"
  },
  "devDependencies": {
    "@ordit/eslint-config": "workspace:*",
    "@ordit/typescript": "workspace:*",
    "@types/node": "^20.3.1"
  },
  "eslintConfig": {
    "root": true,
    "extends": [
      "@ordit"
    ],
    "parserOptions": {
      "project": "./tsconfig.json"
    }
  },
  "lint-staged": {
    "*": [
      "prettier --write --ignore-unknown"
    ],
    "*.{ts}": [
      "eslint --fix"
    ]
  }
}
